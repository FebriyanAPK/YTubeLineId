<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealGridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#f7f7f8">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:src="@drawable/_51_bat" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@+id/user"
                android:layout_centerHorizontal="true"
                android:text="Kelelawar" />
        </RelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#f38eff" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/job"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/_51_beaver" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@+id/job"
                android:layout_centerHorizontal="true"
                android:text="berang berang" />
        </RelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#f7ff56" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/notif"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/_51_bee" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@+id/notif"
                android:layout_centerHorizontal="true"
                android:text="lebah" />
        </RelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#b2fcff" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/mail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/_51_beetle" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@+id/mail"
                android:layout_centerHorizontal="true"
                android:text="bettle" />
        </RelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#ff1f5a">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/rate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/_51_bulldog" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@+id/rate"
                android:layout_centerHorizontal="true"
                android:text="Anjing" />
        </RelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>
    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#fdf1db" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/rev"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/_51_bulldog" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@+id/rev"
                android:layout_centerHorizontal="true"
                android:text="mantan" />
        </RelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

</com.google.android.material.circularreveal.CircularRevealGridLayout>